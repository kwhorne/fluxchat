{
    "name": "wirelabs/fluxchat",
    "version": "v0.2.1",
    "description": "A beautiful Laravel Livewire chat component built with Flux UI, supporting real-time messaging with Reverb.",
    "keywords": ["laravel", "livewire", "chat", "flux-ui", "real-time", "reverb", "messaging"],
    "license": "MIT",
    "authors": [
        {
            "name": "Wirelabs",
            "email": "kh@gets.no",
            "homepage": "https://kwhorne.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "livewire/livewire": "^3.0",
        "livewire/flux-pro": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Wirelabs\\FluxChat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wirelabs\\FluxChat\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wirelabs\\FluxChat\\FluxChatServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix"
    }
}
